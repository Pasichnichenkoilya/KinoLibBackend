generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://kinolibadmin:libROOT123456789@kinolib-server.postgres.database.azure.com:5432/kinolibdb?shema=public"
}

model Details {
  id            String       @id() @default(uuid())
  detailsUrl    String
  filmPath      String[]
  titleUa       String
  titleOriginal String
  description   String
  image         String
  rating        String
  country       String
  time          String
  release       String
  genres        String[]
  seasonsInfo   SeasonInfo[]
}

model SeasonInfo {
  id            String   @id() @default(uuid())
  seasonInfoUrl String
  seasonId      String
  seasonNumber  String
  episodes      String[]
  Details       Details? @relation(fields: [detailsId], references: [id])
  detailsId     String?
}
